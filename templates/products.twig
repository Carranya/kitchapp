<div class='inline-block w-96 border border-pink-300 rounded-xl text-left p-3 m-5 bg-pink-300 shadow-xl'>
    <h1 class='text-center text-2xl font-bold underline mb-3'>Produkte</h1>
    {% set step = 0 %}
    {% for product in products %}
        {% if step == 0 %}
            {% set bg = 'bg-pink-200' %}
            {% set step = step + 1 %}
        {% else %}
            {% set bg = 'bg-pink-100' %}
            {% set step = step - 1 %}
        {% endif %}
            <div class='p-3 {{ bg }} flex justify-between'>
                <span>{{ product.productName }}</span>
                <span>{{ product.unit }}</span>
            </div>
            {% include 'parts/button.twig' %}
    {% endfor %}
</div>